{
  "manifest_version": 3,
  "name": "Roster Checker",
  "version": "1.0.0",
  "description": "Checks CBS Sports fantasy baseball rosters for illegal lineup placements.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "offscreen"
  ],
  "host_permissions": [
    "https://*.cbssports.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Roster Checker",
    "default_icon": {
      "16": "icons/roster_active_16.png",
      "48": "icons/roster_active_48.png",
      "128": "icons/roster_active_128.png"
    }
  },
  "icons": {
    "16": "icons/roster_active_16.png",
    "48": "icons/roster_active_48.png",
    "128": "icons/roster_active_128.png"
  }
}
